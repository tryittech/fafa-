# 伺服器設定
PORT=5001
NODE_ENV=development

# 資料庫設定
DB_PATH=./database/fafa.db

# JWT 設定
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# CORS 設定
ALLOWED_ORIGINS=http://localhost:3000,https://fafa.com.tw

# 檔案上傳設定
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# 安全性設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日誌設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log